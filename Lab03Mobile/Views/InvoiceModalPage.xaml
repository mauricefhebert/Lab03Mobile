<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Lab03Mobile.Views.InvoiceModalPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <Label Text="Facture" />
        <Entry x:Name="invoiceAmountEntry" Keyboard="Numeric" />
        <StackLayout Orientation="Horizontal">
            <Button
                BackgroundColor="LightGray"
                Clicked="Btn_Cancel_Payement_Clicked"
                Text="Annuler" />
            <Button
                BackgroundColor="LightGreen"
                Clicked="Btn_Confirm_Payement_Clicked"
                Text="Confirmer" />
        </StackLayout>
    </StackLayout>
</ContentPage>